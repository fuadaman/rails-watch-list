<div class="container py-5">
  <h1>My Movie Lists</h1>

  <% if @lists.any? %>
    <ul class="list-group mt-4">
      <% @lists.each do |list| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to list.name, list_path(list), class: "text-decoration-none" %>
          <span class="badge bg-primary"><%= list.bookmarks.count %> movies</span>
          <%= link_to "Delete", list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="mt-4">You haven't created any lists yet.</p>
  <% end %>

  <%= link_to "Create a new list", new_list_path, class: "btn btn-success mt-3" %>
</div>
