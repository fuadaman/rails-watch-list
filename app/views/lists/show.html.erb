<div class="container py-5">
  <h1><%= @list.name %></h1>

  <p>Movies in this list:</p>
  <% if @list.bookmarks.any? %>
    <ul>
      <% @list.bookmarks.each do |bookmark| %>
        <li>
          <strong><%= bookmark.movie.title %></strong>
          <p><em><%= bookmark.comment %></em></p>
          <%= link_to "Remove", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No movies in this list yet.</p>
  <% end %>

  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success mt-3" %>
  <%= link_to "Back to lists", lists_path, class: "btn btn-secondary mt-3" %>
</div>
